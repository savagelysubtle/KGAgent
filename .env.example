# Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_KEY_SECRET=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Crawler
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=30
CRAWLER_HEADLESS=true
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379

# Storage
STORAGE_DIR=./storage
SCREENSHOT_DIR=./storage/screenshots
PDF_DIR=./storage/pdfs
CRAWLER_CACHE_DIR=./cache/crawler

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=document_chunks

# Graph Database (Graphiti)
# Supports: "neo4j" or "falkordb"
# FalkorDB recommended for local dev (has built-in vector search)
GRAPH_DRIVER=falkordb

# Neo4j settings (if GRAPH_DRIVER=neo4j)
# Note: Neo4j Community Edition doesn't support vector search required by Graphiti
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# FalkorDB settings (if GRAPH_DRIVER=falkordb)
FALKORDB_HOST=localhost
FALKORDB_PORT=6380
FALKORDB_PASSWORD=password

# LM Studio / Local LLM
LLM_BASE_URL=http://localhost:1234/v1
LLM_API_KEY=lm-studio
LLM_MODEL_NAME=local-model
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# HuggingFace Embeddings
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_HOME=./models/embeddings